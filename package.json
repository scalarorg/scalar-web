{
  "name": "scalar-web",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "type-check": "tsc -b",
    "dev": "vite --host",
    "build": "tsc -b && vite build",
    "lint": "biome check --unsafe --no-errors-on-unmatched --files-ignore-unknown=true ./",
    "format": "biome check --write --unsafe --no-errors-on-unmatched --files-ignore-unknown=true ./",
    "preview": "vite preview",
    "postinstall": "bunx simple-git-hooks",
    "generate-api": "rimraf ./src/types/schema.ts && openapi-typescript ./src/assets/openapi.yaml -o ./src/types/schema.ts"
  },
  "simple-git-hooks": {
    "pre-commit": "bunx lint-staged"
  },
  "lint-staged": {
    "**/*.{js,ts,tsx,json,css,md}": [
      "biome format --write",
      "biome check",
      "bunx type-check"
    ]
  },
  "dependencies": {
    "@bitcoin-js/tiny-secp256k1-asmjs": "^2.2.3",
    "@hookform/resolvers": "^4.1.0",
    "@radix-ui/react-dropdown-menu": "^2.1.6",
    "@radix-ui/react-label": "^2.1.2",
    "@radix-ui/react-popover": "^1.1.6",
    "@radix-ui/react-select": "^2.1.6",
    "@radix-ui/react-separator": "^1.1.2",
    "@radix-ui/react-slot": "^1.1.2",
    "@radix-ui/react-tabs": "^1.1.3",
    "@radix-ui/react-toast": "^1.2.6",
    "@rainbow-me/rainbowkit": "^2.2.3",
    "@scalar-lab/bitcoin-vault": "^0.0.34",
    "@tailwindcss/vite": "^4.0.6",
    "@tanstack/react-query": "^5.66.5",
    "@tanstack/react-router": "^1.105.0",
    "bitcoinjs-lib": "^7.0.0-rc.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "ethers": "^6.13.5",
    "lodash": "^4.17.21",
    "lucide-react": "^0.475.0",
    "openapi-fetch": "^0.13.4",
    "openapi-react-query": "^0.3.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.54.2",
    "react-icons": "^5.5.0",
    "tailwind-merge": "^3.0.1",
    "tailwindcss": "^4.0.6",
    "tailwindcss-animate": "^1.0.7",
    "usehooks-ts": "^3.1.1",
    "viem": "^2.23.2",
    "wagmi": "^2.14.11",
    "zod": "^3.24.2",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@eslint/js": "^9.19.0",
    "@optimize-lodash/rollup-plugin": "^5.0.2",
    "@tanstack/react-query-devtools": "^5.66.7",
    "@tanstack/router-plugin": "^1.105.0",
    "@types/node": "^22.13.4",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@vitejs/plugin-react": "^4.3.4",
    "globals": "^15.14.0",
    "lint-staged": "^15.4.3",
    "openapi-typescript": "^7.6.1",
    "simple-git-hooks": "^2.11.1",
    "typescript": "~5.7.2",
    "vite": "^6.1.0",
    "vite-plugin-node-polyfills": "^0.23.0",
    "vite-plugin-svgr": "^4.3.0",
    "vite-plugin-top-level-await": "^1.5.0",
    "vite-plugin-wasm": "^3.4.1"
  }
}